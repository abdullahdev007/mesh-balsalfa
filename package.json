{
  "name": "mesh-balsalfa",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev:web": "npm run dev -w web",
    "dev:server": "npm run dev -w server",
    "dev:shared": "npm run dev -w @repo/shared",
    "dev:game-core": "npm run dev -w @repo/game-core",
    "dev": "concurrently -n WEB,SERVER,SHARED,GAME -c blue,green,magenta,cyan \"npm run dev:web\" \"npm run dev:server\" \"npm run dev:shared\" \"npm run dev:game-core\"",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@fontsource/rubik": "^5.1.1",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.7.3",
    "react-icons": "^5.5.0",
    "web": "^0.1.0",
    "workspace": "^0.0.1-preview.2"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
